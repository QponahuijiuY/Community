<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mutong.mtcommunity.mapper.UserMapper">
    <sql id="insertFields">
         password, salt, email, type, status, activation_code, header_url, create_time ,nickname,mod_time
    </sql>

    <sql id="selectFields">
        id, password, salt, email, type, status, activation_code, header_url, create_time,nickname,mod_time
    </sql>

    <select id="selectUserById" resultType="User" parameterType="Integer">
        select <include refid="selectFields"></include>
        from user
        where id = #{id}
    </select>

    <select id="selectByName" resultType="User" parameterType="String">
        select <include refid="selectFields"></include>
        from user
        where username = #{username}
    </select>

    <select id="selectUserByEmail" resultType="User" parameterType="String">
        select *
        from user
        where email = #{email}
    </select>

    <insert id="insertUser" parameterType="User" keyProperty="id">
        insert into user (<include refid="insertFields"></include>)
        values(#{password}, #{salt}, #{email}, #{type}, #{status}, #{activationCode}, #{headerUrl}, #{createTime},#{nickname},#{modTime})
    </insert>

    <update id="updateStatus" >
        update user set status = #{status} where id = #{id}
    </update>

    <update id="updateHeader">
        update user set header_url = #{headerUrl} where id = #{id}
    </update>

    <update id="updatePassword">
        update user set password = #{password} where id = #{id}
    </update>

</mapper>