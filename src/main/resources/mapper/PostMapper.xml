<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mutong.mtcommunity.mapper.PostMapper">

    <sql id="insertFields">
        user_id, title, content, special_column,create_time,mod_time,comment_count,page_view,type,status,score
    </sql>
    <sql id="selectFields">
        id,title,content,special_column,user_id,create_time,mod_time,comment_count,page_view,type,status,score
    </sql>
    <insert id="insertPost" parameterType="com.mutong.mtcommunity.model.Post" keyProperty="id" >
        insert into post (<include refid="insertFields"></include>)
        values(#{userId}, #{title}, #{content}, #{specialColumn},#{createTime},#{modTime},#{commentCount},#{pageView},#{type},#{status},#{score})
    </insert>
    <select id="selectPosts" resultType="com.mutong.mtcommunity.model.Post">
        select *
        from post
        where status != 0
        <!--综合页面，按照发帖的时间排序-->
        <if test="orderModel == 0">
            order by create_time desc
        </if>
        <!--精华页面-->
        <if test="orderModel == 1">
            order by type desc, score desc ,create_time desc
        </if>
        <!--周榜页面-->
        <if test="orderModel == 2">
            order by type desc, score desc ,create_time desc
        </if>
        <!--月榜页面-->
        <if test="orderModel == 3">
            and type = 1
        </if>
        <!--按照最新-->
        <if test="orderModel == 4">
            order by create_time desc
        </if>
        <!--按照热议-->
        <if test="orderModel == 5">
            order by comment_count desc,score desc ,create_time desc
        </if>
        <!--如果有用户，那么查看的就是用户所发的帖子-->
        <!--如果userid为0，说明需要查询所有的帖子-->
        <if test="userId != 0">
            and user_id = #{userId},
        </if>

        LIMIT #{offset}, #{limit}
    </select>
</mapper>